<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="170dp">

    <TextView
        android:id="@+id/textViewDialogInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="IP"
        android:textColor="#FD1E01"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextDialogInfo"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:hint="IP"
        android:maxLines="1"
        android:inputType="text"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDialogInfo" />

    <Button
        android:id="@+id/buttonYesDialogInfo"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_dialog"
        android:text="Ok"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="#FD1E01"
        app:layout_constraintEnd_toEndOf="@+id/editTextDialogInfo"
        app:layout_constraintTop_toBottomOf="@+id/editTextDialogInfo" />

    <Button
        android:id="@+id/buttonNoDialogInfo"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_dialog"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="#FD1E01"
        app:layout_constraintStart_toStartOf="@+id/editTextDialogInfo"
        app:layout_constraintTop_toBottomOf="@+id/editTextDialogInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>