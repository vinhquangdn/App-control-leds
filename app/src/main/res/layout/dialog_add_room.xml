<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="510dp">

    <TextView
        android:id="@+id/textViewDialogAddRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="ADD ROOM"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#0071A5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/editTextNameDialogAddRoom"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/livingroom" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/editTextNameDialogAddRoom"
        app:layout_constraintTop_toTopOf="@+id/imageView1"
        app:srcCompat="@drawable/kitchen" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="7dp"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/imageView1"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        app:srcCompat="@drawable/bedroom" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="7dp"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/bathroom"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/editTextNameDialogAddRoom"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:hint="Room Name"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/editTextIPDialogAddRoom"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:hint="IP"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/editTextNameDialogAddRoom"
        app:layout_constraintStart_toStartOf="@id/editTextNameDialogAddRoom"
        app:layout_constraintTop_toBottomOf="@+id/editTextNameDialogAddRoom" />

    <Button
        android:id="@+id/buttonYesDialogAddRoom"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_ok_dialog"
        android:text="Add"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/editTextIPDialogAddRoom"
        app:layout_constraintTop_toBottomOf="@+id/editTextIPDialogAddRoom" />

    <Button
        android:id="@+id/buttonNoDialogAddRoom"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_cancle_dialog"
        android:text="Cancel"
        android:textSize="20sp"
        android:textColor="#0071A5"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/editTextIPDialogAddRoom"
        app:layout_constraintTop_toBottomOf="@+id/editTextIPDialogAddRoom" />

</androidx.constraintlayout.widget.ConstraintLayout>